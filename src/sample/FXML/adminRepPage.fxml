<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainBorderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="335.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.adminRepControl">
   <top>
      <MenuBar>
         <Menu text="Navigation">
            <items>
               <MenuItem onAction="#addRep" text="Add new rep" />
               <SeparatorMenuItem mnemonicParsing="false" />
               <MenuItem onAction="#showMainPage" text="Main page" />
               <MenuItem onAction="#showOptionsPage" text="Options" />
               <MenuItem onAction="#exitBB" text="Exit" />
            </items></Menu>
         <Menu text="Database">
            <items>
               <MenuItem onAction="#exerciseScene" text="Exercise DB" />
               <MenuItem fx:id="menuRep" disable="true" text="Repetition DB" />
               <MenuItem fx:id="menuSet" onAction="#setScene" text="Set DB" />
            </items></Menu>
      </MenuBar>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label minWidth="125.0" text="Rep ID" />
                  <TextArea fx:id="repIDText" disable="true" editable="false" prefHeight="200.0" wrapText="true" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label minWidth="125.0" text="Tension" wrapText="true" />
                  <TextArea fx:id="tensionText" prefHeight="200.0" wrapText="true" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label minWidth="125.0" text="Repetitions" />
                  <TextArea fx:id="repetitionsText" prefHeight="200.0" wrapText="true" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <left>
      <Pane prefHeight="200.0" prefWidth="5.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Pane prefHeight="200.0" prefWidth="5.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <HBox alignment="CENTER" prefHeight="68.0" prefWidth="335.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="buttonPrevious" mnemonicParsing="false" onAction="#onPreviousClicked" text="Previous">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="buttonUpdate" mnemonicParsing="false" onAction="#onUpdateClicked" text="Update">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin></Button>
            <Button fx:id="buttonDelete" mnemonicParsing="false" onAction="#onDeleteClicked" text="Delete">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin></Button>
            <Button fx:id="buttonNext" defaultButton="true" mnemonicParsing="false" onAction="#onNextClicked" text="Next">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
