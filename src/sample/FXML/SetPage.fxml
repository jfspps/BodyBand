      <HBox prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
             <Button fx:id="buttonPrevious" mnemonicParsing="false" onAction="#onPreviousClicked" text="Previous">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
             </Button>
            <Pane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Button fx:id="buttonUpdate" layoutX="26.0" mnemonicParsing="false" onAction="#onUpdateClicked" text="Update" />
                  <Button fx:id="buttonDelete" layoutX="115.0" mnemonicParsing="false" onAction="#onDeleteClicked" text="Delete" />
               </children></Pane>
            <Button fx:id="buttonNext" mnemonicParsing="false" onAction="#onNextClicked" text="Next">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
