<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="335.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.About">
    <top>
        <VBox alignment="CENTER" prefHeight="58.0" prefWidth="335.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="About">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="542.0" prefWidth="327.0" BorderPane.alignment="CENTER">
            <children>
            <HBox alignment="CENTER" prefHeight="58.0" prefWidth="313.0">
               <children>
                  <Label text="BodyBand author : James Apps (https://github.com/jfspps/BodyBand)" wrapText="true">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
                <HBox alignment="CENTER" prefHeight="116.0" prefWidth="313.0">
                    <children>
                        <Label text="BodyBand is an open source project released under the GPL v2.0 licensing terms. You are free to edit and redistribute this project to others, including for commercial use, as long as you provide the source code with your product under the same license." wrapText="true" />
                    </children>
                </HBox>
                <HBox prefHeight="64.0" prefWidth="313.0">
               <children>
                  <Label prefHeight="62.0" prefWidth="313.0" text="A modified FlatBee theme by karlthebee (https://github.com/karlthebee/flatbee) was used." wrapText="true" />
               </children></HBox>
            <HBox prefHeight="27.0" prefWidth="313.0">
               <children>
                  <Label text="General instructions">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="126.0" prefWidth="313.0">
               <children>
                  <Label text="New workouts for the current day are created under &quot;New workout&quot;. You can also access previous records for a given exercise by selecting 'Exercise History' under the Exercise stats page. A URL hyperlink, if supplied, is also highlighted on the exercise stats page, and if selected opens in your web browser." wrapText="true" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="95.0" prefWidth="313.0">
               <children>
                  <Label text="When editing exercise records, keep in mind that if an exercise record is deleted from BodyBand then this will affect all other records, e.g. sets, which reference said exercise." wrapText="true" />
               </children>
            </HBox>
            </children>
        </VBox>
    </center>
    <left>
        <Pane prefHeight="542.0" prefWidth="13.0" BorderPane.alignment="CENTER" />
    </left>
    <right>
        <Pane prefHeight="542.0" prefWidth="9.0" BorderPane.alignment="CENTER" />
    </right>
   <bottom>
      <VBox alignment="CENTER" prefHeight="52.0" prefWidth="335.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onClickedReturn" text="Return to Options" />
         </children>
      </VBox>
   </bottom>
</BorderPane>
